<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->
    <item android:top="2dp"
        
        >
        <shape android:shape="rectangle"
             >
            <gradient
                android:angle="90"
                android:endColor="#00888888"
                android:startColor="#00888888" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>

    <!-- Blue Top color -->
    <item
        android:bottom="2dp"
        >
        <shape android:shape="rectangle" >
            <solid android:color="@color/giulioDarkBlue" />

            <corners
                android:radius="5dp" />
        </shape>
    </item>

</layer-list>