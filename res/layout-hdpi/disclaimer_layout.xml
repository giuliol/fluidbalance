<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disclaimer_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:background="@drawable/titlebar"
    android:paddingTop="20sp" >

    <TextView
        android:id="@+id/disclaimer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/giulioDarkBlue"
        android:gravity="center"
        android:text="Disclaimer"
        android:textColor="@color/lightgrey"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disclaimer_title" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/disclaimer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="15sp"
                android:gravity="left"
                android:text="@string/disclaimer"
                android:textColor="@color/lightgrey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/disclaimer_ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/disclaimer_tv"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="5sp"
                android:background="@drawable/pressable_blue"
                android:gravity="center"
                android:padding="7sp"
                android:text="@string/agree"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/disclaimer_no_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/disclaimer_tv"
                android:layout_marginBottom="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/pressable_blue"
                android:gravity="center"
                android:padding="7sp"
                android:text="@string/disagree"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>