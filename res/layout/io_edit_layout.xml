<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/io_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10sp" >
    <EditText 
        android:id="@+id/io_edit_title_et"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20sp"
        android:maxEms="7"
        android:gravity="right"
        android:background="@color/giulioBlue"
        android:textColor="@color/lightgrey"
        android:textSize="25sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingRight="80sp"
        android:textAlignment="viewEnd"
        android:hint="@string/entryType"
        />

    <EditText 
        android:id="@+id/io_edit_amount_et"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxEms="3"
        android:minEms="3"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:gravity="center"
        android:layout_below="@+id/io_edit_title_et"
        android:layout_marginTop="25sp"
        android:textColor="@color/giulioBlue"
        android:background="@drawable/rounded_corners_transp"
        android:hint="0.0"
        android:inputType="numberDecimal"
        android:textSize="60sp"
        android:textStyle="italic"
        />
    <TextView 
        android:id="@+id/io_edit_ml"
        android:text="[mL]"
        android:layout_toRightOf="@+id/io_edit_amount_et"
        android:layout_alignBaseline="@+id/io_edit_amount_et"
        android:textSize="20sp"
        android:layout_marginLeft="7sp"
        android:paddingRight="2sp"
        android:textStyle="italic"
        android:textColor="@color/giulioBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    
    <TextView 
        android:id="@+id/io_edit_ok_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_alignBaseline="@+id/io_edit_title_et"
        android:layout_alignParentRight="true"
        android:background="@drawable/pressable_round_blue"
        android:textColor="@color/lightgrey"
        android:text="OK"
        android:textSize="30sp"
        android:padding="15sp"
        android:layout_marginTop="15sp"
       />
    
</RelativeLayout>
